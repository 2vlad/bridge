{
  "name": "lightphone-claude-bridge",
  "version": "1.0.0",
  "description": "A bridge to connect Light Phone notes with Claude AI.",
  "main": "bridge.js",
  "scripts": {
    "start": "node server.js",
    "start:optimized": "OPTIMIZED_MODE=true node server.js",
    "dev": "node server.js",
    "dev:optimized": "OPTIMIZED_MODE=true NODE_ENV=development node server.js",
    "worker:optimized": "node optimized-main.js",
    "test:optimized": "node test-optimizations.js",
    "dev:frontend": "cd front && npm run dev",
    "build:frontend": "cd front && npm run build",
    "install:all": "npm install && cd front && npm install --legacy-peer-deps"
  },
  "keywords": [
    "lightphone",
    "claude",
    "automation",
    "puppeteer"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "puppeteer-core": "^21.0.0",
    "axios": "^1.5.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0"
  }
} 